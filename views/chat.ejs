<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Page</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #003C43, #135D66);
            margin: 0;
            padding: 0;
        }
    
        body:before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, #003C43, #135D66, #77B0AA);
            z-index: -1;
        }
    
        .container {
            display: flex;
            flex-direction: column;
            height: 100%;
            width: 90%;
            margin: 0 auto;
            padding: 20px;
            background: #77B0AA;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    
        #header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #E3FEF7;
            color: #003C43;
        }
    
        .buttons button {
            margin-left: 10px;
            padding: 10px;
            background: #E3FEF7;
            color: #003C43;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
    
        .buttons button:hover {
            background-color: #135D66;
        }
    
        .main-content {
            display: flex;
            flex: 1;
        }
    
        .chats-list {
            flex: 0.3; /* Less space for friend list */
            overflow-y: auto;
            padding: 10px;
        }
    
        .chat-box {
            flex: 0.7; /* More space for chat box */
            overflow-y: auto;
            padding: 10px;
            display: none;
            height: 80vh;
            position: relative;
            background-color: #f2f2f2;
            overflow-y: auto;
            overflow-x: hidden;
        }
    
        .chat-box .chat-header {
            display: flex;
            justify-content: flex-end;
            padding: 10px;
        }
    
        .chat-box .chat-header button {
            margin-left: 10px;
        }
    
        .chat-box .chat-body {
            margin-top: 10px;
        }
    
        .chat-box .chat-footer {
            position: sticky;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 10px;
            background-color: #f2f2f2;
        }
    
        .chat-box .chat-footer input[type="text"] {
            width: calc(100% - 130px);
            padding: 5px;
            margin-right: 5px;
        }
    
        .chat-box .chat-footer button {
            padding: 5px 10px;
        }
    
        .chat-box {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background: #77B0AA;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    
        /* Styles for messages */
        .message {
            width: auto;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
            background-color: #e0e0e0; /* Different background color for messages */
        }
    
        /* Styles for buttons */
        button {
            width: 100%;
            padding: 10px;
            background: #E3FEF7;
            color: #003C43;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
    
        button:hover {
            background-color: #135D66;
        }
    
        @media screen and (max-width: 600px) {
            .chat-box {
                max-width: 300px;
            }
        }
    
        @media only screen and (max-width: 600px) {
            .main-content {
                flex-direction: column;
            }
    
            .chats-list,
            .chat-box {
                flex: none;
                width: 100%;
            }
    
            .buttons button {
                font-size: 0.8em;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div id="header">
            <div class="welcome">Welcome User</div>
            <div class="buttons">
                <button id="callLogBtn">Call Log</button>
                <button id="requestsBtn">Requests</button>
            </div>
        </div>
        <div class="main-content">
            <form method="get" action="/Chat"></form>
            <div class="chats-list" id="chatsList">
                <h2>Chats</h2>

            </div>

            <div class="chat-box" id="chatBox">
                <div class="chat-header">
                    <button id="callBtn">Call</button>
                </div>
                <div class="chat-body">
                    Chat with <span id="friendName"></span>
                </div>
                <div class="chat-footer">
                    <input type="text" placeholder="Type your message...">
                    <button id="sendBtn">Send</button>
                    <button id="recordBtn">Record</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const chatBox = document.getElementById('chatBox');
            const chatsList = document.getElementById('chatsList');
            const friendNameElement = document.getElementById('friendName');
            const chatBody = document.querySelector('.chat-body');
            const userId = '<%= id %>'; // User ID passed from the server
            const userName = '<%= username %>'; // User name passed from the server
            let friends = JSON.stringify('<%= Friends %>'); // Friends list passed from the server
            let messages = JSON.stringify('<%= Messages %>'); // Messages passed from the server
            messages = JSON.parse(messages);
            messages = messages.split(',');
            console.log(messages);
            let messagesArray = [];
            for (i = 0; i < (messages.length) / 2; i++) {
                messagesArray.push([messages[i * 2], messages[i * 2 + 1]]);
            }
            console.log(messagesArray);
            friends = JSON.parse(friends);
            // Function to show chat box
            function showChatBox() {
                chatBox.style.display = 'block';
            }

            // Function to populate chat box with content
            function populateChatBox(friendName, messages) {
                friendNameElement.textContent = friendName;
                chatBody.innerHTML = ''; // Clear the chat body

                for (let i = 0; i < messagesArray.length; i++) {
                    const messageElement = document.createElement('p');
                    messageElement.classList.add('message');
                    messageElement.textContent = messagesArray[i][0]; // Message content

                    // If the message ID equals the user ID, align it to the right, else align it to the left
                    if (messagesArray[i][1] === userId) {
                        messageElement.style.textAlign = 'right';
                    } else {
                        messageElement.style.textAlign = 'left';
                    }

                    chatBody.appendChild(messageElement);
                }

                showChatBox();
            }

            // Parse the friends list
            friends = friends.split(',');

            // Populate chat list
            friends.forEach(friend => {
                const chatItem = document.createElement('div');
                chatItem.classList.add('chat-item');
                chatItem.textContent = friend;
                chatItem.addEventListener('click', () => populateChatBox(friend, messages));
                chatsList.appendChild(chatItem);
            });

            // Call log button event listener
            document.getElementById('callLogBtn').addEventListener('click', () => {
                // Add functionality for call log button
            });

            // Requests button event listener
            document.getElementById('requestsBtn').addEventListener('click', () => {
                // Add functionality for requests button
            });

            // Send message button event listener
            chatBox.addEventListener('click', function (event) {
                if (event.target.id === 'sendBtn') {
                    const messageInput = chatBox.querySelector('input[type="text"]');
                    const message = messageInput.value.trim();
                    if (message !== '') {
                        // Send message functionality
                        console.log(`Sending message: ${message}`);
                        messageInput.value = '';

                        const messageElement = document.createElement('p');
                        messageElement.classList.add('message');
                        messageElement.textContent = message;
                        messageElement.style.textAlign = 'right';
                        chatBody.appendChild(messageElement);
                    }
                }
            });

            // Record button event listener
            chatBox.addEventListener('click', function (event) {
                if (event.target.id === 'recordBtn') {
                    // Record message functionality
                    console.log('Recording message...');
                }
            });
        });
    </script>