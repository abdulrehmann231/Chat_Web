<%- include('../partials/header.ejs') %>
<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to bottom, #003C43, #135D66); /* Original gradient background */
        margin: 0;
        padding: 0;
    }

    /* Stylish gradient background */
    body:before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom right, #003C43, #135D66, #77B0AA);
        z-index: -1;
    }

    h1 {
        text-align: center;
        margin-top: 50px;
        color: #E3FEF7; /* Heading color */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* Heading text shadow */
    }

    .warning {
        color: red;
        font-weight: bold;
        font-size: 20px;
        text-align: center;
        margin-top: 20px;
        animation: fadeOut 2s ease-in-out forwards, slideIn 1s ease-in-out forwards;
    }

    @keyframes fadeOut {
        0% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            opacity: 0;
            display: none;
        }
    }

    @keyframes slideIn {
        0% {
            transform: translateY(100%);
        }
        100% {
            transform: translateY(0);
        }
    }

    form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background: #77B0AA; /* Form background color */
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 10px;
        color: #E3FEF7; /* Label color */
    }

    input[type="email"],
    input[type="password"] {
        width: 95%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        background: #E3FEF7; /* Button background color */
        color: #003C43; /* Button text color */
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease; /* Button background color transition */
    }

    input[type="submit"]:hover {
        background-color: #135D66; /* Button background color on hover */
    }

    @media screen and (max-width: 600px) {
        form {
            max-width: 300px;
        }
    }
</style>
</head>

<body>
    <h1>Login</h1>
    <form action="/login" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br><br>
        <input type="submit" value="Login">
    </form>
    <% if(locals.message){ %>
        <h1 class="warning" id="warning"><%= message %></h1>
    <% } %>


    <script>
        setTimeout(function() {
            var warningElement = document.getElementById("warning");
            if (warningElement) {
                warningElement.style.display = "none";
            }
        }, 3000);
    </script>
    <%- include('../partials/footer') %>
